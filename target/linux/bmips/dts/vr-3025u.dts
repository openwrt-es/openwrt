/dts-v1/;

#include "bcm6368.dtsi"

/ {
	compatible = "comtrend,vr-3025u", "brcm,bcm6368";
	model = "Comtrend VR-3025u";

	memory@0 {
		device_type = "memory";
		reg = <0x00000000 0x04000000>;
	};

	chosen {
		bootargs = "earlycon";
		stdout-path = "uart0:115200";
	};

	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;
		debounce-interval = <60>;

		reset {
			label = "reset";
			gpios = <&gpio1 2 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	gpio-leds {
		compatible = "gpio-leds";

		dsl_green {
			label = "VR-3025u:green:dsl";
			gpios = <&gpio0 2 GPIO_ACTIVE_LOW>;
		};
		inet_green {
			label = "VR-3025u:green:inet";
			gpios = <&gpio0 5 GPIO_ACTIVE_HIGH>;
		};
		power_green {
			label = "VR-3025u:green:power";
			gpios = <&gpio0 22 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
		power_red {
			label = "VR-3025u:red:power";
			gpios = <&gpio0 24 GPIO_ACTIVE_HIGH>;
		};
		inet_red {
			label = "VR-3025u:red:inet";
			gpios = <&gpio0 31 GPIO_ACTIVE_HIGH>;
		};
	};
};

&pflash {
	status = "ok";

	partitions {
		cfe@0 {
			label = "cfe";
			reg = <0x0000000 0x0020000>;
			read-only;
		};
		linux@20000 {
			label = "linux";
			reg = <0x0020000 0x1fc0000>;
		};
		nvram@1fe0000 {
			label = "nvram";
			reg = <0x1fe0000 0x020000>;
		};
	};
};

&uart0 {
	status = "ok";
};
